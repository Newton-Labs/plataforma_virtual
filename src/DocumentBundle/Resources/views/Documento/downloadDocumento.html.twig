{% extends '::base_page.html.twig' %}

{% block body_content -%}
    
    {% if documento == "parcial" %}
        <h1>Cursos para descargar parciales</h1>
    {% else %}
        <h1>Curosos para descargar hojas de trabajo</h1>
    {% endif %}

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Nombre Curso</th>
                <th>Código Curso</th>
                
            </tr>
        </thead>
        <tbody>
        {% for curso in cursos %}
            <tr>
               
                <td>{{ curso.nombreCurso }}</td>
                <td>{{ curso.codigoCurso }}</td>
               
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <h4>¿No aparece el curso que buscabas?</h4>
    <a class= "btn btn-default btn-sm btn-warning" href="{{ path('asignacion', {'username': app.user.username}) }}">
        <h4> Asígnate el curso aquí</h4>
    </a>
    {% endblock %}
