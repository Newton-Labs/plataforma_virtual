{% extends '::base_page.html.twig' %}

{% block body_content -%}

   {% for curso in cursos %} 
   <h1>{{ curso | capitalize}}</h1>

       <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nombre Documento</th>
                    <th>Actualizado</th>
                    <th>Link</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for document in curso.documentos %}
                {% if document.tipoDocumento == true %}
                <tr>
                    <td><a href="{{ path('documento_show', { 'id': document.id }) }}">{{ document.id }}</a></td>
                    <td>{{ document.documentName }}</td>
                    <td>{% if document.updatedAt %}
                            {{ document.updatedAt|date('Y-m-d H:i:s') }}
                        {% endif %}
                    </td>
                    <td>
                        <a href="{{ vich_uploader_asset(document, 'documentFile') }}">Descargar</a>
                    </td>

                    <td>
                    <ul>
                        <li>
                            <a href="{{ path('documento_show', { 'id': document.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('documento_edit', { 'id': document.id }) }}">edit</a>
                        </li>
                    </ul>
                    </td>
                </tr>
                {% endif %}
            {% endfor %}
            </tbody>
        </table>

    {% endfor %}

        
    {% endblock %}
