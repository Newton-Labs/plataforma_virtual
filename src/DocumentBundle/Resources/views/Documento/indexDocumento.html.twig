{% extends '::base_page.html.twig' %}

{% block body_content -%}
    <h1>Parciales</h1>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre Documento</th>
                <th>Actualizado</th>
                <th>Link</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for document in entities %}
        {% if document.tipoDocumento == true %}
            <tr>
                <td><a href="{{ path('documento_show', { 'id': document.id }) }}">{{ document.id }}</a></td>
                <td>{{ document.documentName }}</td>
                <td>{% if document.updatedAt %}
                        {{ document.updatedAt|date('Y-m-d H:i:s') }}
                    {% endif %}
                </td>
                <td>
                    <a href="{{ vich_uploader_asset(document, 'documentFile') }}">Descargar</a>
                </td>

                <td>
                <ul>
                    <li>
                        <a href="{{ path('documento_show', { 'id': document.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('documento_edit', { 'id': document.id ,'username': app.user.username}) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endif %}
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('documento_new',{ 'username':app.user.username}) }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
