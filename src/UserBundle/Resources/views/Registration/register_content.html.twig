    <div id="loginbox" class="mainbox col-md-12"> 
        
       
        <div class="panel panel-default" >
            <div class="panel-heading">
                <div class="panel-title text-center">Registro Usuario </div>
            </div>     

            <div class="panel-body" >

                <form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="form-group">
                	


    	
                   
                    {{form_start(form)}}
                    
                    <br>
                       <h8><strong>Nombre Completo</strong></h8>
                      <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>

                      	{{form_row(form.nombreCompleto,{'attr': {'class': 'form-control'}})}}

                    </div>
                    <br>
                      <h8><strong>Nombre de Usuario</strong></h8>
                     <div class="input-group">
                      
                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i>
                        </span>
                        {{form_row(form.username,{'attr': {'class': 'form-control','placeholder':'Usuario'}})}}

                    </div>

      				<br>
                       <h8><strong>Correo Electrónico UVG</strong></h8>
                     <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>

                      	{{form_row(form.email,{'attr': {'class': 'form-control','placeholder':'Correo de la Universidad del Valle de Guatemala'}})}}

                    </div>
					<br>
                      <h8><strong>Contraseña</strong></h8>
                     <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>

                      	{{form_row(form.plainPassword.first,{'attr': {'class': 'form-control','placeholder':'No tiene que ser necesariamente la misma utilizada en la UVG'}})}}

                    </div>

         			<br>
                     <h8><strong>Repetir Contraseña</strong></h8>
                     <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>

                      	{{form_row(form.plainPassword.second,{'attr': {'class': 'form-control','placeholder':'Confirmar Contraseña'}})}}

                    </div>
                     <br>
                     <h8 style= "color:black"><strong>Acepto los términos de uso</strong></h8>
                     <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-ok"></i></span>

                        {{form_row(form.terminos,{'attr':{'class': 'checkbox'}})}}

                    </div>
                                                                                       
                    <br>
                     <button type="button" class="btn btn-info btn-xs" data-toggle="modal" data-target="#myModal">Términos de Uso</button>
                    <button type="button" class="btn btn-info btn-xs" data-toggle="modal" data-target="#myModal2">Política de Privacidad</button>
                    <div class="form-group">
                        <!-- Button -->
                        <div class="col-sm-12 controls">
                            <button type="submit" value="{{ 'Guardar'|trans({}, 'FOSUserBundle') }}" class="btn btn-primary btn-block"><i class="glyphicon glyphicon-log-in"></i>Guardar </button>                          
                        </div>
                       
                    </div>
                
               
				{{form_end(form)}}

    			
                </form>     

            </div>                     
        </div>  
    
      </div>
      
        <!-- Modal -->
  <div class="modal fade" id="myModal" role="dialog">
    <div style = "color:black;text-align: justify;">
      <div class="modal-dialog modal-lg">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h1 class="modal-title">Política de privacidad</h1>
          </div>
          <div class="modal-body">
            {% include 'terminosycondiciones/politica_privacidad.html.twig' %}
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
          </div>
        </div>
      </div>
    </div>
  </div>
        <!-- Modal -->
  <div class="modal fade" id="myModal2" role="dialog">
    <div style = "color:black;text-align: justify;">
      <div class="modal-dialog modal-lg">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
             <h1 class="modal-title">Términos de Uso ("Términos")</h1>
          </div>
          <div class="modal-body">
            {% include 'terminosycondiciones/terminos_uso.html.twig' %}
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
          </div>
        </div>
      </div>
    </div>
  </div>

  
