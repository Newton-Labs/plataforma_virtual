{% extends '::base_page.html.twig' %}




{% block body_content -%}
    <h1>Otras Tutor√≠as</h1>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Tutor</th>
                <th>Curso</th>
                <th>Informacion</th>
                <th>Rating</th>
            </tr>
        </thead>
        <tbody>
        {% for tutoria in entities %}
        
        <tr>
            <td>{{ tutoria.usuario.getEmail()}}</td>
            <td>{{ tutoria.curso }}</td>
            <td>{{ tutoria.info }}</td>
            <td>{{ tutoria.rating|rating }}</td>
        </tr>
        
        {% endfor %}
        </tbody>
    </table>

    
    {% endblock %}
